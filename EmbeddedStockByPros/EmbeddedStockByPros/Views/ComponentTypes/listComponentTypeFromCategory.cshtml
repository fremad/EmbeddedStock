@model List<ComponentType>

@{
    ViewData["Title"] = "ListCom";
}

<h2>Get list of component types in Category</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="listComponentTypeFromCategory">
            
            <div class="form-group">
                <label>Search for Category</label>
                <input name="textBox" type="text" placeholder="category"/>
               
                       
               @if (Model.Count != 0)
                                {
                     foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                      item<br/>                    
                                </td>
        
                             </tr>
                         }
                }
                
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
